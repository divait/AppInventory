<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.divait.appinventory" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".splash.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app_list.MainActivity" >
        </activity>
        <activity android:name=".categories_list.CategoryActivity" >
        </activity>
        <activity android:name=".app_details.DetailsActivity" >
        </activity>

        <meta-data android:name="DATABASE" android:value="apps_inv.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="co.divait.appinventory" />
    </application>

</manifest>